<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    android:id="@+id/bgApp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="421dp"
        android:layout_height="56dp"
        android:layout_weight="2"
        app:layout_constraintBottom_toBottomOf="@+id/bgApp"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintLeft_toLeftOf="@+id/bgApp"
        app:layout_constraintRight_toRightOf="@+id/bgApp"
        app:layout_constraintTop_toTopOf="@+id/bgApp"
        app:layout_constraintVertical_bias="0.071">

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/grey"
            android:onClick="resetGame"
            android:text="@string/reset"
            android:textColor="@color/black" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="309dp"
        android:layout_height="426dp"
        android:layout_marginTop="120dp"
        android:layout_weight="6"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:rowCount="3"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintLeft_toLeftOf="@+id/bgApp"
        app:layout_constraintRight_toRightOf="@+id/bgApp"
        app:layout_constraintTop_toTopOf="@+id/bgApp">

        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:onClick="selectNumber"
            android:text="@string/btn1"
            app:backgroundTint="@color/blue" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:onClick="selectNumber"
            android:text="@string/btn2"
            app:backgroundTint="@color/red" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:onClick="selectNumber"
            android:text="@string/btn3"
            app:backgroundTint="@color/green" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:onClick="selectNumber"
            android:text="@string/btn4"
            app:backgroundTint="@color/yellow" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:onClick="selectNumber"
            android:text="@string/btn5"
            app:backgroundTint="@color/grey" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:onClick="selectNumber"
            android:text="@string/btn6"
            app:backgroundTint="@color/yellow_900" />


        <TextView
            android:id="@+id/congratulations_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/congratulations"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/congratulations_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/subtitle_congratulations"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"

            android:visibility="gone" />
    </GridLayout>


    <GridLayout
        android:id="@+id/grid_progress"
        android:layout_width="339dp"
        android:layout_height="22dp"
        android:layout_weight="2"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/bgApp"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintLeft_toLeftOf="@+id/bgApp"
        app:layout_constraintRight_toRightOf="@+id/bgApp"
        app:layout_constraintTop_toTopOf="@+id/bgApp"
        app:layout_constraintVertical_bias="0.904">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/progress_label"
            android:textColor="@color/black"
            android:gravity="center" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="261dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="1"
            android:minWidth="200dp"
            android:minHeight="10dp"
            android:progress="0"
            android:progressBackgroundTint="@color/dark_grey"
            android:progressTint="@color/teal_200"
            android:scaleY="5" />
    </GridLayout>






</androidx.constraintlayout.widget.ConstraintLayout>